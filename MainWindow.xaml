<Window x:Class="Custom_Console_Style_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Custom_Console_Style_Launcher"
        mc:Ignorable="d"
        Title="My Video Launcher" Height="720" Width="1280"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <!-- Style for the ListBoxItem to make the icons more interactive -->
        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border x:Name="border"
                                CornerRadius="20"
                                BorderBrush="Transparent"
                                BorderThickness="2"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True"
                                ClipToBounds="True">
                            <ContentPresenter x:Name="contentPresenter"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Content="{TemplateBinding Content}"
                                              ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                              ContentSource="ContentSource"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#8080ff"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                            <TranslateTransform Y="-8"/>
                                        </TransformGroup>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#4080ff" ShadowDepth="0" BlurRadius="20"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="BorderBrush" Value="#8080ff"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- The background is now a solid black color -->
        <Grid.Background>
            <SolidColorBrush Color="Black" />
        </Grid.Background>

        <!-- Video Background -->
        <MediaElement x:Name="BackgroundVideo"
                      Source="{Binding SelectedGame.VideoPath}"
                      Stretch="UniformToFill"
                      IsMuted="False"
                      LoadedBehavior="Play"
                      MediaEnded="BackgroundVideo_MediaEnded"/>

        <!-- Main Content Grid -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Section (Game Info) -->
            <StackPanel Grid.Row="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,50">
                <TextBlock Text="{Binding SelectedGame.Name}"
                           Foreground="White"
                           FontSize="72"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#8080ff"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="{Binding SelectedGame.Description}"
                           Foreground="#A0A0A0"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="10,0,10,20"
                           MaxWidth="800"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="Black"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Launch Button -->
                <Button Content="Launch Game"
                        Width="200"
                        Height="50"
                        Background="#4080ff"
                        Foreground="White"
                        FontSize="20"
                        FontWeight="Bold"
                        BorderBrush="Transparent"
                        Click="LaunchGame"
                        Cursor="Hand"
                        RenderTransformOrigin="0.5,0.5"
                        Margin="0,20,0,0">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="25">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#60a0ff"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#4080ff"/>
                    </Button.Effect>
                </Button>
            </StackPanel>

            <!-- Bottom Section (Game Icons) -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        Margin="0,0,0,20">
                <ListBox x:Name="GamesListBox"
                         ItemsSource="{Binding Games}"
                         SelectedItem="{Binding SelectedGame, Mode=TwoWay}"
                         HorizontalAlignment="Center"
                         BorderThickness="0"
                         Background="Transparent"
                         ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Image Source="{Binding IconPath}"
                                       Width="225"
                                       Height="319"
                                       Stretch="UniformToFill"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       MouseLeftButtonUp="GameIcon_MouseLeftButtonUp"
                                       Cursor="Hand"
                                       RenderTransformOrigin="0.5,0.5">
                                    <Image.Clip>
                                        <RectangleGeometry RadiusX="20" RadiusY="20" Rect="0,0,225,319"/>
                                    </Image.Clip>
                                </Image>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
